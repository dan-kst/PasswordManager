@using PasswordManager.Models.Classes
@using PasswordManager.Models.Classes.Clients
@{
	@model ClientBase
	ViewData["Title"] = "Create Client";
}

<h1>Create</h1>

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <td>
            @Html.DisplayFor(model => model.Name)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <td>
            @Html.DisplayFor(model => model.Email)
        </td>
    </tr>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.CreatedDate)
		</th>
		<td>
			@Html.DisplayFor(model => model.CreatedDate)
		</td>
	</tr>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.LastUpdatedDate)
		</th>
		<td>
			@Html.DisplayFor(model => model.LastUpdatedDate)
		</td>
	</tr>


    @switch(Model.ClientType)
    {
	    case EnumClientType.Personal:
		    @Html.PartialAsync("_ViewUser", Model as User)
		    break;
	    case EnumClientType.Admin:
		    @Html.PartialAsync("_ViewAdmin", Model as Admin)
		    break;
    }
    </table>
<br />
<a asp-action="EditClient" asp-route-id="Model.Id">Edit</a> |
<a asp-action="DeleteClient" asp-route-id="Model.Id">Delete</a> |
<a asp-action="Index">Back</a>