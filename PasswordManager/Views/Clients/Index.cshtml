@using PasswordManager.Models.Classes
@using PasswordManager.Models.Classes.Clients
@{
	@model IEnumerable<ClientBase>
	ViewData["Title"] = "Clients";
}

<p>
    <a asp-action="CreateAdmin" class="btn btn-link">Create New Admin</a>
    <a asp-action="CreateUser" class="btn btn-link">Create New User</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.ClientType)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.LastUpdatedDate)
                </td>
                <td>
                    <a asp-action="ViewClient" asp-route-id="@item.Id" class="btn btn-link">View</a> |
                    <a asp-action="DeleteClient" asp-route-id="@item.Id" class="btn btn-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>