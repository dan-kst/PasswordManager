@{
	@model SecretBase
	ViewData["Title"] = "Delete Password";
}

<h1>Delete</h1>

<p>Are you sure you want to delete the client <strong>@Model.Name</strong>?</p>

<form asp-action="DeletePasswordConfirm" method="post">
	<input type="text" asp-for="Id" class="form-control" hidden />
	<input type="text" asp-for="ClientId" class="form-control" hidden />

	<button type="submit" class="btn btn-danger">Confirm Delete</button>
	<button asp-action="Index" class="btn btn-secondary">Back</button>
</form>