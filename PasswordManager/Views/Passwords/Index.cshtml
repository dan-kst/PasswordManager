@{
	@model IEnumerable<SecretBase>
    ViewData["Title"] = "Passwords";
}

<h1>Your Passwords</h1>

<p>
    <a asp-action="GetType" class="btn btn-link">Create New</a>
</p>
<div class="form-actions no-color">
    <p>
        <input type="text" name="SearchString" placeholder="Find by name..." id="jsFilterInput" onkeyup="filterTableByName()" />
    </p>
</div>

<table class="table table-bordered table-hover" id="secretsTable">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SecretType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SecretType)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>

                        <a asp-action="EditPassword" asp-route-id="@item.Id" class="btn btn-link">Edit</a> |
                        <a asp-action="ViewPassword" asp-route-id="@item.Id" class="btn btn-link">Details</a> |
                        <a asp-action="DeletePassword" asp-route-id="@item.Id" class="btn btn-link">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No passwords found.</td>
            </tr>
        }
    </tbody>
</table>